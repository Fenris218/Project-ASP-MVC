<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyPhongNet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyPhongNet.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #f8f9fc;
            --accent-color: #2e59d9;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            padding: 0.75rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary-color) !important;
        }

        .dropdown-toggle {
            background-color: transparent;
            border: none;
            color: #d1d3e2;
            transition: all 0.3s;
        }

            .dropdown-toggle:hover {
                color: white;
                background-color: rgba(255,255,255,0.1);
            }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.35rem;
        }

        .dropdown-header {
            font-weight: 600;
            color: #b7b9cc;
        }

        .container {
            max-width: 1200px;
        }

       
        /* Modal styling */
        .modal-content {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .modal-header {
            border-bottom: 1px solid #e3e6f0;
            background-color: var(--secondary-color);
            border-radius: 0.5rem 0.5rem 0 0;
        }

        .form-control {
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d3e2;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.5rem 1.5rem;
            border-radius: 0.35rem;
        }

            .btn-primary:hover {
                background-color: var(--accent-color);
                border-color: var(--accent-color);
            }

        #soDuHienTai {
            font-weight: 600;
            color: var(--primary-color);
        }

        .avatar-img {
            border: 2px solid rgba(255,255,255,0.3);
            margin-right: 0.5rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-pc-display-horizontal me-2"></i>DUT CYBER NET
                </a>

                <div class="ml-auto d-flex align-items-center">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownUser"
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/Images/avatar.png" width="30" height="30" class="rounded-circle avatar-img" />
                                <span>@Context.Session.GetString("FullName")</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                                <div class="px-3 py-2">
                                    <h6 class="dropdown-header text-uppercase"id="tenHienTai">Xin chào, @Context.Session.GetString("FullName")!</h6>
                                    <p class="mb-2 small">Số dư: <span id="soDuHienTai" class="fw-bold">@Context.Session.GetString("Balance") VND</span></p>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#profileModal">
                                    <i class="bi bi-person-circle me-2"></i>Thông tin cá nhân
                                </a>
                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#napTienModal">
                                    <i class="bi bi-wallet2 me-2"></i>Nạp tiền
                                </a>
                                <form method="post" action="/User/Logout">
                                    <button class="dropdown-item text-danger" type="submit">
                                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <!-- Profile Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="profileForm">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title fw-bold" id="profileModalLabel">
                            <i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <div class="modal-body">
                        <div id="profileMessage" class="mb-3"></div>
                        <div class="form-floating mb-3">
                            <input type="text" name="FullName" id="FullName" class="form-control" placeholder="Họ tên" required />
                            <label for="FullName">Họ tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" name="Phone" id="Phone" class="form-control" placeholder="Số điện thoại" required />
                            <label for="Phone">Số điện thoại</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" name="Password" id="Password" class="form-control" placeholder="Mật khẩu" required />
                            <label for="Password">Mật khẩu</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg me-1"></i>Đóng
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Thêm modal nạp tiền -->
    <div class="modal fade" id="napTienModal" tabindex="-1" aria-labelledby="napTienModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="napTienForm">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title fw-bold" id="napTienModalLabel">
                            <i class="bi bi-wallet2 me-2"></i>Nạp tiền vào tài khoản
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <div class="modal-body">
                        <div id="napTienMessage" class="mb-3"></div>
                        <div class="form-floating mb-3">
                            <input type="number" name="soTienNap" id="soTienNap" class="form-control"
                                   placeholder="Số tiền nạp" min="1000" max="10000000" required />
                            <label for="soTienNap">Số tiền nạp (VNĐ)</label>
                            <div class="form-text">Số tiền từ 1.000 đến 10.000.000 VNĐ</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg me-1"></i>Đóng
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-currency-exchange me-1"></i>Nạp tiền
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            // Khi mở modal, tự load thông tin người dùng
                    $('#profileModal').on('show.bs.modal', function() {
            // Reset form trước khi load dữ liệu mới
            $("#profileForm")[0].reset();
            $("#profileMessage").empty();

            // Load dữ liệu từ server
            $.get("/User/GetProfile")
                .done(function(data) {
                    $("#FullName").val(data.fullName);
                    $("#Phone").val(data.phone);
                    $("#Password").val(data.password);
                })
                .fail(function() {
                    $("#profileMessage").html(`
                        <div class="alert alert-danger">
                            Không thể tải thông tin người dùng. Vui lòng thử lại.
                        </div>
                    `);
                });
        });


            // Xử lý submit cập nhật profile
            $("#profileForm").submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: "/User/UpdateProfile",
                    method: "POST",
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            $("#profileMessage").html(`
                                <div class="alert alert-success alert-dismissible fade show">
                                    ${res.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);
                            capNhatFullName();
                             setTimeout(() => {$('#profileModal').modal('hide');}, 1000);
                            capNhatFullName();
                        } else {
                            $("#profileMessage").html(`
                                <div class="alert alert-danger alert-dismissible fade show">
                                    ${res.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);
                        }
                    },
                    error: function () {
                        $("#profileMessage").html(`
                            <div class="alert alert-danger alert-dismissible fade show">
                                Có lỗi xảy ra khi cập nhật thông tin.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `);
                    }
                });
            });

            // Xử lý form nạp tiền
            $("#napTienForm").submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: "/User/NapTien",
                    method: "POST",
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            $("#napTienMessage").html(`
                                <div class="alert alert-success alert-dismissible fade show">
                                    Đã nạp thành công ${res.tiennap} VND vào tài khoản!
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);
                            capNhatSoDu();
                            $("#napTienForm")[0].reset();
                            setTimeout(() => $('#napTienModal').modal('hide'), 1500);
                        } else {
                            $("#napTienMessage").html(`
                                <div class="alert alert-danger alert-dismissible fade show">
                                    ${res.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `);
                        }
                    },
                    error: function (err) {
                        $("#napTienMessage").html(`
                            <div class="alert alert-danger alert-dismissible fade show">
                                Có lỗi xảy ra khi nạp tiền. Vui lòng thử lại.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `);
                    }
                });
            });

            // Reset form khi modal đóng
            $('#napTienModal').on('hidden.bs.modal', function () {
                $("#napTienForm")[0].reset();
                $("#napTienMessage").empty();
            });
        });

        function capNhatSoDu() {
            $.ajax({
                url: "/User/GetBalance",
                method: "GET",
                success: function (res) {
                    if (res.success) {
                        // Cập nhật số dư trên dropdown avatar
                        $("#soDuHienTai").text(res.balance + " VND");
                    }
                }
            });
        }
                function capNhatFullName() {
            $.ajax({
                url: "/User/GetFullName",
                method: "GET",
                success: function (res) {
                    if (res.success) {
                        // Cập nhật tên trong dropdown header
                        $("#tenHienTai").text("Xin chào, " + res.fullname + "!");
                        // Cập nhật tên trong dropdown toggle
                        $(".dropdown-toggle span").text(res.fullname);
                    }
                }
            });
        }
    </script>
    <script>
        window.addEventListener("beforeunload", function (e) {
            // Gọi logout API bằng fetch (asynchronous)
            navigator.sendBeacon("/User/Logout");
        });
    </script>

</body>
</html>